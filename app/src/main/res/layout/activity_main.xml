            android:layout_weight="1"
            android:orientation="vertical" >

            <Button
                android:id="@+id/button_3"
                style="@style/Round_Button"
                android:layout_gravity="center"
                android:layout_height="match_parent"
                android:layout_width="90dp"
                android:backgroundTint="@color/purple"
                android:textColor="@color/black"
                android:textSize="50dp"
                android:text="3"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linlay_vertical_12"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <Button
                android:id="@+id/button_res"
                style="@style/Round_Button"
                android:layout_gravity="center"
                android:layout_height="match_parent"
                android:layout_width="90dp"
                android:backgroundTint="@color/green"
                android:textColor="@color/black"
                android:textSize="50dp"
                android:text="-"
                />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linlay_horizontal_5"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/linlay_vertical_13"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <Button
                android:id="@+id/button_0"
                style="@style/Round_Button"
                android:layout_gravity="center"
                android:layout_height="match_parent"
                android:layout_width="90dp"
                android:backgroundTint="@color/purple"
                android:textColor="@color/black"
                android:textSize="50dp"
                android:text="0"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linlay_vertical_14"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <Button
                android:id="@+id/button_dot"
                style="@style/Round_Button"
                android:layout_gravity="center"
                android:layout_height="match_parent"
                android:layout_width="90dp"
                android:backgroundTint="@color/blue"
                android:textColor="@color/black"
                android:textSize="50dp"
                android:text="."
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linlay_vertical_15"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <Button
                android:id="@+id/button_eq"
                style="@style/Round_Button"
                android:layout_gravity="center"
                android:layout_height="match_parent"
                android:layout_width="90dp"
                android:backgroundTint="@color/orange"
                android:textColor="@color/black"
                android:textSize="50dp"
                android:text="="
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linlay_vertical_16"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
